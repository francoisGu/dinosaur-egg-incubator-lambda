{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/**/*.ts"]
}
